{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173/",
    "distDir": "dist"
  },
  "package": {
    "productName": "lovelace",
    "version": "0.8.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "dialog": { "open": true },
      "fs": {
        "scope": { "requireLiteralLeadingDot": false }
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "MIT",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "identifier": "com.lovelace.dev",
      "longDescription": "Personal code editor",
      "publisher": "418e",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Personal code editor",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256"
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "minHeight": 400,
        "resizable": true,
        "title": "Lovelace",
        "width": 1200,
        "minWidth": 1000,
        "theme": "Dark",
        "label": "Lovelace",
        "fileDropEnabled": true,
        "contentProtected": true,
        "acceptFirstMouse": true
      }
    ]
  }
}
